@page
@model ChikiCut.web.Pages.ConceptosGasto.IndexModel
@{
    ViewData["Title"] = "Conceptos de Gastos";
}

<div class="page-header mb-4">
    <div class="row align-items-center">
        <div class="col">
            <h1><i class="bi bi-cash-coin me-2"></i>Catálogo de Conceptos de Gastos</h1>
            <p class="text-muted">Gestiona los tipos de gastos para todas las sucursales</p>
        </div>
        <div class="col-auto">
            <a asp-page="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i>Nuevo Concepto
            </a>
        </div>
    </div>
</div>

<!-- Filtros -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get">
            <div class="row g-3">
                <div class="col-md-4">
                    <label for="SearchString" class="form-label">Buscar</label>
                    <input asp-for="SearchString" class="form-control" placeholder="Código, nombre, descripción o etiquetas...">
                </div>
                <div class="col-md-3">
                    <label for="CategoriaFilter" class="form-label">Categoría</label>
                    <select asp-for="CategoriaFilter" class="form-select">
                        <option value="">Todas las categorías</option>
                        @foreach (var categoria in ChikiCut.web.Data.Entities.ConceptoGasto.Categorias.Lista)
                        {
                            <option value="@categoria">@categoria</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="SoloActivos" class="form-label">Estado</label>
                    <select asp-for="SoloActivos" class="form-select">
                        <option value="">Todos</option>
                        <option value="true">Solo activos</option>
                        <option value="false">Solo inactivos</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search me-1"></i>Buscar
                    </button>
                    <a asp-page="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i>Limpiar
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Estadísticas -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h4 class="text-primary">@Model.ConceptosGasto.Count</h4>
                <small class="text-muted">Total Conceptos</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h4 class="text-success">@Model.ConceptosGasto.Count(c => c.IsActive)</h4>
                <small class="text-muted">Activos</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h4 class="text-warning">@Model.ConceptosGasto.Count(c => c.RequiereAutorizacion)</h4>
                <small class="text-muted">Con Autorización</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h4 class="text-info">@Model.ConceptosGasto.GroupBy(c => c.Categoria).Count()</h4>
                <small class="text-muted">Categorías</small>
            </div>
        </div>
    </div>
</div>

<!-- Lista de conceptos -->
<div class="card">
    <div class="card-header">
        <i class="bi bi-list-ul me-2"></i><strong>Lista de Conceptos (@Model.ConceptosGasto.Count)</strong>
    </div>
    <div class="card-body p-0">
        @if (Model.ConceptosGasto.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Código</th>
                            <th>Concepto</th>
                            <th>Categoría</th>
                            <th class="text-center">Frecuencia</th>
                            <th class="text-center">Límite</th>
                            <th class="text-center">Autorización</th>
                            <th class="text-center">Comprobante</th>
                            <th class="text-center">Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var concepto in Model.ConceptosGasto)
                        {
                            <tr>
                                <td>
                                    <span class="badge bg-primary">@concepto.Codigo</span>
                                </td>
                                <td>
                                    <div>
                                        <strong>@concepto.Nombre</strong>
                                        @if (!string.IsNullOrEmpty(concepto.Descripcion))
                                        {
                                            <br><small class="text-muted">@concepto.Descripcion</small>
                                        }
                                        @if (concepto.TagsList.Any())
                                        {
                                            <br>
                                            @foreach (var tag in concepto.TagsList.Take(3))
                                            {
                                                <span class="badge bg-light text-dark me-1">#@tag</span>
                                            }
                                            @if (concepto.TagsList.Count > 3)
                                            {
                                                <span class="text-muted">+@(concepto.TagsList.Count - 3) más</span>
                                            }
                                        }
                                    </div>
                                </td>
                                <td>
                                    <span class="badge @(concepto.Categoria switch {
                                        "Servicios" => "bg-info",
                                        "Insumos" => "bg-success", 
                                        "Mantenimiento" => "bg-warning text-dark",
                                        "Administrativo" => "bg-secondary",
                                        "Marketing" => "bg-primary",
                                        "Recursos Humanos" => "bg-danger",
                                        _ => "bg-dark"
                                    })">
                                        @concepto.Categoria
                                    </span>
                                    @if (!string.IsNullOrEmpty(concepto.Subcategoria))
                                    {
                                        <br><small class="text-muted">@concepto.Subcategoria</small>
                                    }
                                </td>
                                <td class="text-center">
                                    <small class="badge bg-light text-dark">@concepto.TipoFrecuencia</small>
                                </td>
                                <td class="text-center">
                                    @if (concepto.LimiteMaximo.HasValue)
                                    {
                                        <small class="text-warning fw-bold">@concepto.LimiteMaximo.Value.ToString("C")</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">Sin límite</small>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (concepto.RequiereAutorizacion)
                                    {
                                        <small class="text-warning">
                                            <i class="bi bi-lock-fill me-1"></i>Nivel @concepto.NivelAutorizacionRequerido
                                        </small>
                                    }
                                    else
                                    {
                                        <small class="text-success">
                                            <i class="bi bi-check-circle me-1"></i>No requiere
                                        </small>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (concepto.RequiereComprobante)
                                    {
                                        <small class="text-primary">
                                            <i class="bi bi-file-earmark-text me-1"></i>Obligatorio
                                        </small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">
                                            <i class="bi bi-file-earmark me-1"></i>Opcional
                                        </small>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge @(concepto.IsActive ? "bg-success" : "bg-secondary")">
                                        @(concepto.IsActive ? "Activo" : "Inactivo")
                                    </span>
                                    <br>
                                    <small class="text-muted">
                                        @if (concepto.AplicaTodasSucursales)
                                        {
                                            <i class="bi bi-buildings me-1"></i><text>Todas</text>
                                        }
                                        else
                                        {
                                            <i class="bi bi-building me-1"></i><text>Específicas</text>
                                        }
                                    </small>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-page="Details" asp-route-id="@concepto.Id" 
                                           class="btn btn-sm btn-outline-info" title="Ver detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-page="Edit" asp-route-id="@concepto.Id" 
                                           class="btn btn-sm btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-page="Delete" asp-route-id="@concepto.Id" 
                                           class="btn btn-sm btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-cash-coin display-1 text-muted"></i>
                <h4 class="mt-3">No se encontraron conceptos</h4>
                <p class="text-muted">
                    @if (!string.IsNullOrEmpty(Model.SearchString) || !string.IsNullOrEmpty(Model.CategoriaFilter))
                    {
                        <text>Ajusta los filtros o </text>
                    }
                    <a asp-page="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>crea el primer concepto
                    </a>
                </p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Auto-envío del formulario al cambiar filtros
        document.addEventListener('DOMContentLoaded', function() {
            const selects = document.querySelectorAll('select[name="CategoriaFilter"], select[name="SoloActivos"]');
            selects.forEach(select => {
                select.addEventListener('change', function() {
                    this.form.submit();
                });
            });
        });
    </script>
}