@page
@model ChikiCut.web.Pages.Servicios.DetailsModel
@{
    ViewData["Title"] = "Detalles del Servicio";
}

<div class="page-header mb-4">
    <div class="row align-items-center">
        <div class="col">
            <h1><i class="bi bi-eye me-2"></i>Detalles del Servicio</h1>
            <p class="text-muted">@Model.Servicio.Nombre</p>
        </div>
        <div class="col-auto">
            <div class="btn-group" role="group">
                <a asp-page="Edit" asp-route-id="@Model.Servicio.Id" class="btn btn-primary">
                    <i class="bi bi-pencil me-1"></i>Editar
                </a>
                <a asp-page="Asignar" asp-route-id="@Model.Servicio.Id" class="btn btn-success">
                    <i class="bi bi-building me-1"></i>Asignar Sucursales
                </a>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Volver
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Información principal del servicio -->
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-info-circle me-2"></i><strong>Información del Servicio</strong>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Código:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-secondary">@Model.Servicio.Codigo</span>
                            </dd>
                            <dt class="col-sm-4">Nombre:</dt>
                            <dd class="col-sm-8"><strong>@Model.Servicio.Nombre</strong></dd>
                            <dt class="col-sm-4">Categoría:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-info">@Model.Servicio.Categoria</span>
                                @if (!string.IsNullOrEmpty(Model.Servicio.Subcategoria))
                                {
                                    <br><small class="text-muted">@Model.Servicio.Subcategoria</small>
                                }
                            </dd>
                            <dt class="col-sm-4">Estado:</dt>
                            <dd class="col-sm-8">
                                <span class="badge @(Model.Servicio.IsActive ? "bg-success" : "bg-danger")">
                                    @Model.Servicio.EstadoDescripcion
                                </span>
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Precio Base:</dt>
                            <dd class="col-sm-7"><strong>@Model.Servicio.PrecioFormateado</strong></dd>
                            <dt class="col-sm-5">Duración:</dt>
                            <dd class="col-sm-7">
                                <i class="bi bi-clock me-1"></i>@Model.Servicio.DuracionFormateada
                            </dd>
                            <dt class="col-sm-5">Nivel:</dt>
                            <dd class="col-sm-7">
                                <span class="badge @(Model.Servicio.NivelDificultad <= 2 ? "bg-success" : Model.Servicio.NivelDificultad <= 4 ? "bg-warning" : "bg-danger")">
                                    @Model.Servicio.NivelDescripcion
                                </span>
                            </dd>
                            <dt class="col-sm-5">Requiere Cita:</dt>
                            <dd class="col-sm-7">
                                @if (Model.Servicio.RequiereCita)
                                {
                                    <i class="bi bi-check-circle text-success"></i> <span class="text-success">Sí</span>
                                }
                                else
                                {
                                    <i class="bi bi-x-circle text-danger"></i> <span class="text-danger">No</span>
                                }
                            </dd>
                            <dt class="col-sm-5">Comisión:</dt>
                            <dd class="col-sm-7">@Model.Servicio.ComisionEmpleado%</dd>
                        </dl>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Servicio.Descripcion))
                {
                    <hr>
                    <h6><i class="bi bi-file-text me-1"></i>Descripción:</h6>
                    <p class="text-muted">@Model.Servicio.Descripcion</p>
                }

                @if (!string.IsNullOrEmpty(Model.Servicio.NotasInternas))
                {
                    <hr>
                    <h6><i class="bi bi-sticky me-1"></i>Notas Internas:</h6>
                    <div class="alert alert-light">
                        <small>@Model.Servicio.NotasInternas</small>
                    </div>
                }

                @if (Model.Servicio.TagsList.Any())
                {
                    <hr>
                    <h6><i class="bi bi-tags me-1"></i>Etiquetas:</h6>
                    @foreach (var tag in Model.Servicio.TagsList)
                    {
                        <span class="badge bg-light text-dark me-1">#@tag</span>
                    }
                }
            </div>
        </div>

        <!-- Sucursales asignadas -->
        <div class="card">
            <div class="card-header">
                <i class="bi bi-building me-2"></i><strong>Sucursales Asignadas (@Model.SucursalesAsignadas.Count)</strong>
            </div>
            <div class="card-body">
                @if (Model.SucursalesAsignadas.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Sucursal</th>
                                    <th>Precio Local</th>
                                    <th>Duración</th>
                                    <th>Disponible</th>
                                    <th>Descuento Máx.</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ss in Model.SucursalesAsignadas.OrderBy(s => s.Sucursal.Name))
                                {
                                    <tr>
                                        <td><strong>@ss.Sucursal.Name</strong></td>
                                        <td>
                                            <strong>@ss.PrecioFormateado</strong>
                                            @if (ss.PrecioLocal != Model.Servicio.PrecioBase)
                                            {
                                                var diferencia = ((ss.PrecioLocal - Model.Servicio.PrecioBase) / Model.Servicio.PrecioBase * 100);
                                                <br><small class="@(diferencia > 0 ? "text-success" : "text-danger")">
                                                    @diferencia.ToString("+0;-0")%
                                                </small>
                                            }
                                        </td>
                                        <td>@ss.DuracionFormateada</td>
                                        <td>
                                            <span class="badge @(ss.EstaDisponibleHoy ? "bg-success" : "bg-warning")">
                                                @(ss.EstaDisponibleHoy ? "Disponible" : "No disponible")
                                            </span>
                                        </td>
                                        <td>@ss.DescuentoMaximo%</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-building display-4 text-muted"></i>
                        <h5 class="text-muted mt-2">Sin sucursales asignadas</h5>
                        <p class="text-muted">Este servicio no está disponible en ninguna sucursal</p>
                        <a asp-page="Asignar" asp-route-id="@Model.Servicio.Id" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-1"></i>Asignar a Sucursales
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Panel lateral -->
    <div class="col-lg-4">
        <div class="card mb-3">
            <div class="card-header">
                <i class="bi bi-bar-chart me-2"></i><strong>Estadísticas</strong>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div class="row">
                        <div class="col-6">
                            <h4 class="text-primary">@Model.SucursalesAsignadas.Count</h4>
                            <small class="text-muted">Sucursales</small>
                        </div>
                        <div class="col-6">
                            <h4 class="text-success">@Model.SucursalesAsignadas.Count(s => s.EstaDisponibleHoy)</h4>
                            <small class="text-muted">Disponibles</small>
                        </div>
                    </div>
                    @if (Model.SucursalesAsignadas.Any())
                    {
                        <hr>
                        <div class="row">
                            <div class="col-6">
                                <h6 class="text-info">@Model.SucursalesAsignadas.Min(s => s.PrecioLocal).ToString("C")</h6>
                                <small class="text-muted">Precio mín.</small>
                            </div>
                            <div class="col-6">
                                <h6 class="text-warning">@Model.SucursalesAsignadas.Max(s => s.PrecioLocal).ToString("C")</h6>
                                <small class="text-muted">Precio máx.</small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <i class="bi bi-clock-history me-2"></i><strong>Información del Sistema</strong>
            </div>
            <div class="card-body">
                <dl class="row small">
                    <dt class="col-5">Creado:</dt>
                    <dd class="col-7">@Model.Servicio.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                    @if (Model.Servicio.UpdatedAt.HasValue)
                    {
                        <dt class="col-5">Modificado:</dt>
                        <dd class="col-7">@Model.Servicio.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                    }
                    @if (Model.Servicio.UsuarioCreador != null)
                    {
                        <dt class="col-5">Creado por:</dt>
                        <dd class="col-7">@Model.Servicio.UsuarioCreador.CodigoUsuario</dd>
                    }
                </dl>
            </div>
        </div>
    </div>
</div>