@page
@model ChikiCut.web.Pages.Servicios.CreateModel
@{
    ViewData["Title"] = "Nuevo Servicio";
}

<div class="page-header mb-4">
    <div class="row align-items-center">
        <div class="col">
            <h1><i class="bi bi-plus-circle me-2"></i>Nuevo Servicio</h1>
            <p class="text-muted">Crea un nuevo servicio para el catálogo de ChikiCut</p>
        </div>
        <div class="col-auto">
            <a asp-page="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-1"></i>Volver a Lista
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <form method="post" id="createServicioForm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Información Básica -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-info-circle me-2"></i><strong>Información Básica</strong>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Servicio.Codigo" class="form-label">Código *</label>
                                <div class="input-group">
                                    <input asp-for="Servicio.Codigo" class="form-control" maxlength="20" placeholder="Ej: CORTE001">
                                    <button type="button" class="btn btn-outline-secondary" onclick="generarCodigo()" title="Generar código automático">
                                        <i class="bi bi-shuffle"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Servicio.Codigo" class="text-danger"></span>
                                <div class="form-text">Código único para identificar el servicio</div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label asp-for="Servicio.Nombre" class="form-label">Nombre del Servicio *</label>
                                <input asp-for="Servicio.Nombre" class="form-control" placeholder="Ej: Corte de Cabello Básico" maxlength="100">
                                <span asp-validation-for="Servicio.Nombre" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-3">
                                <label asp-for="Servicio.Descripcion" class="form-label">Descripción</label>
                                <textarea asp-for="Servicio.Descripcion" class="form-control" rows="3" placeholder="Describe el servicio que se ofrecerá..."></textarea>
                                <span asp-validation-for="Servicio.Descripcion" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Clasificación -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-tags me-2"></i><strong>Clasificación</strong>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Servicio.Categoria" class="form-label">Categoría *</label>
                                <select asp-for="Servicio.Categoria" class="form-select" id="categoriaSelect">
                                    @foreach (var categoria in ChikiCut.web.Data.Entities.Servicio.Categorias.Lista)
                                    {
                                        <option value="@categoria">@categoria</option>
                                    }
                                </select>
                                <span asp-validation-for="Servicio.Categoria" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Servicio.Subcategoria" class="form-label">Subcategoría</label>
                                <select asp-for="Servicio.Subcategoria" class="form-select">
                                    <option value="">-- Seleccione una subcategoría --</option>
                                    @foreach (var subcategoria in ChikiCut.web.Data.Entities.Servicio.Subcategorias.Lista)
                                    {
                                        <option value="@subcategoria">@subcategoria</option>
                                    }
                                </select>
                                <span asp-validation-for="Servicio.Subcategoria" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Configuración del Servicio -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-gear me-2"></i><strong>Configuración del Servicio</strong>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Servicio.PrecioBase" class="form-label">Precio Base *</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Servicio.PrecioBase" class="form-control" type="number" step="0.01" placeholder="0.00">
                                </div>
                                <span asp-validation-for="Servicio.PrecioBase" class="text-danger"></span>
                                <div class="form-text">Precio de referencia (puede variar por sucursal)</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Servicio.DuracionEstimada" class="form-label">Duración (minutos) *</label>
                                <input asp-for="Servicio.DuracionEstimada" class="form-control" type="number" min="1" max="480" placeholder="30">
                                <span asp-validation-for="Servicio.DuracionEstimada" class="text-danger"></span>
                                <div class="form-text">Tiempo estimado del servicio</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Servicio.ComisionEmpleado" class="form-label">Comisión Empleado (%)</label>
                                <input asp-for="Servicio.ComisionEmpleado" class="form-control" type="number" step="0.01" min="0" max="100" placeholder="10.00">
                                <span asp-validation-for="Servicio.ComisionEmpleado" class="text-danger"></span>
                                <div class="form-text">Porcentaje de comisión para el empleado</div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Servicio.NivelDificultad" class="form-label">Nivel de Dificultad</label>
                                <select asp-for="Servicio.NivelDificultad" class="form-select">
                                    <option value="1">1 - Básico</option>
                                    <option value="2">2 - Intermedio</option>
                                    <option value="3">3 - Avanzado</option>
                                    <option value="4">4 - Experto</option>
                                    <option value="5">5 - Maestro</option>
                                </select>
                                <span asp-validation-for="Servicio.NivelDificultad" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check mb-3 mt-4">
                                <input asp-for="Servicio.RequiereCita" class="form-check-input" checked>
                                <label asp-for="Servicio.RequiereCita" class="form-check-label">
                                    Requiere Cita Previa
                                </label>
                                <div class="form-text">Los clientes deben reservar antes del servicio</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Información Adicional -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-plus-circle me-2"></i><strong>Información Adicional</strong>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Servicio.ImagenUrl" class="form-label">URL de Imagen</label>
                                <input asp-for="Servicio.ImagenUrl" class="form-control" placeholder="https://ejemplo.com/imagen.jpg">
                                <span asp-validation-for="Servicio.ImagenUrl" class="text-danger"></span>
                                <div class="form-text">URL de imagen representativa del servicio</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check mb-3 mt-4">
                                <input asp-for="Servicio.IsActive" class="form-check-input" checked>
                                <label asp-for="Servicio.IsActive" class="form-check-label">
                                    Servicio Activo
                                </label>
                                <div class="form-text">Los servicios inactivos no aparecen en el catálogo</div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-3">
                                <label asp-for="Servicio.NotasInternas" class="form-label">Notas Internas</label>
                                <textarea asp-for="Servicio.NotasInternas" class="form-control" rows="3" placeholder="Notas internas para el personal..."></textarea>
                                <span asp-validation-for="Servicio.NotasInternas" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tags -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-tags me-2"></i><strong>Etiquetas</strong>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Etiquetas para búsqueda</label>
                        <input type="text" id="tagInput" class="form-control" placeholder="Escribe una etiqueta y presiona Enter">
                        <div class="form-text">Facilita la búsqueda del servicio</div>
                    </div>
                    <div id="tagsContainer" class="mb-3">
                        <!-- Tags se cargan dinámicamente -->
                    </div>
                </div>
            </div>

            <!-- Botones de Acción -->
            <div class="d-flex gap-2 mb-4">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle me-1"></i>Crear Servicio
                </button>
                <button type="button" class="btn btn-info" onclick="crearYNuevo()">
                    <i class="bi bi-plus-square me-1"></i>Crear y Nuevo
                </button>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Cancelar
                </a>
            </div>
        </form>
    </div>

    <!-- Panel de Ayuda -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-lightbulb me-2"></i><strong>Consejos</strong>
            </div>
            <div class="card-body">
                <h6><i class="bi bi-check-circle me-1"></i>Información requerida:</h6>
                <ul class="small">
                    <li><strong>Código único</strong> para identificar el servicio</li>
                    <li><strong>Nombre descriptivo</strong> del servicio</li>
                    <li><strong>Categoría</strong> para organizar el catálogo</li>
                    <li><strong>Precio base</strong> de referencia</li>
                    <li><strong>Duración estimada</strong> del servicio</li>
                </ul>
                
                <h6><i class="bi bi-gear me-1"></i>Configuración opcional:</h6>
                <ul class="small">
                    <li>Descripción detallada</li>
                    <li>Subcategoría específica</li>
                    <li>Nivel de dificultad</li>
                    <li>Comisión del empleado</li>
                    <li>Notas internas</li>
                    <li>Etiquetas para búsqueda</li>
                </ul>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <i class="bi bi-info-circle me-2"></i><strong>Categorías Disponibles</strong>
            </div>
            <div class="card-body">
                <div class="small">
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge bg-primary me-2">Cortes</span>
                        <span>Cortes de cabello básicos y avanzados</span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge bg-success me-2">Peinados</span>
                        <span>Peinados y arreglos capilares</span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge bg-warning me-2">Barba</span>
                        <span>Servicios de barba y bigote</span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge bg-info me-2">Tratamientos</span>
                        <span>Tratamientos capilares especializados</span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge bg-secondary me-2">Paquetes</span>
                        <span>Combinaciones de servicios</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <span class="badge bg-danger me-2">Especiales</span>
                        <span>Servicios únicos y premium</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        let tags = [];
        
        document.addEventListener('DOMContentLoaded', function() {
            // Manejo de etiquetas
            const tagInput = document.getElementById('tagInput');
            tagInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    agregarTag(this.value.trim());
                    this.value = '';
                }
            });
            
            // Auto-generar código cuando cambie la categoría
            const categoriaSelect = document.getElementById('categoriaSelect');
            categoriaSelect.addEventListener('change', function() {
                const codigoInput = document.getElementById('Servicio_Codigo');
                if (this.value && !codigoInput.value) {
                    generarCodigo();
                }
            });
        });
        
        function generarCodigo() {
            const categoria = document.getElementById('categoriaSelect').value;
            if (!categoria) {
                alert('Primero selecciona una categoría');
                return;
            }
            
            const prefijos = {
                'Cortes': 'CORTE',
                'Peinados': 'PEIN',
                'Barba': 'BARB',
                'Tratamientos': 'TRAT',
                'Paquetes': 'PAQ',
                'Especiales': 'ESPE'
            };
            
            const prefijo = prefijos[categoria] || 'SERV';
            const numero = String(Math.floor(Math.random() * 999) + 1).padStart(3, '0');
            const codigo = prefijo + numero;
            
            document.getElementById('Servicio_Codigo').value = codigo;
        }
        
        function agregarTag(tag) {
            if (tag && !tags.includes(tag)) {
                tags.push(tag);
                actualizarTagsDisplay();
            }
        }
        
        function eliminarTag(tag) {
            tags = tags.filter(t => t !== tag);
            actualizarTagsDisplay();
        }
        
        function actualizarTagsDisplay() {
            const container = document.getElementById('tagsContainer');
            container.innerHTML = tags.map(tag => 
                `<span class="badge bg-primary me-1 mb-1">
                    #${tag} 
                    <button type="button" class="btn-close btn-close-white ms-1" style="font-size: 0.7em;" onclick="eliminarTag('${tag}')"></button>
                </span>`
            ).join('');
            
            // Actualizar campos hidden para envío
            const existingInputs = document.querySelectorAll('input[name="TagsSeleccionados"]');
            existingInputs.forEach(input => input.remove());
            
            tags.forEach(tag => {
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'TagsSeleccionados';
                input.value = tag;
                document.getElementById('createServicioForm').appendChild(input);
            });
        }
        
        function crearYNuevo() {
            const form = document.getElementById('createServicioForm');
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'CrearYNuevo';
            input.value = 'true';
            form.appendChild(input);
            form.submit();
        }
    </script>
}