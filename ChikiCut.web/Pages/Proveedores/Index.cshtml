@page
@model ChikiCut.web.Pages.Proveedores.IndexModel
@{
    ViewData["Title"] = "Catálogo de Proveedores";
}

<div class="page-header mb-4">
    <div class="row align-items-center">
        <div class="col">
            <h1><i class="bi bi-building me-2"></i>Catálogo de Proveedores</h1>
            <p class="text-muted">Administra los proveedores de productos y servicios</p>
        </div>
        <div class="col-auto">
            @if (Model.CanCreateProveedores)
            {
                <a asp-page="Create" class="btn btn-success">
                    <i class="bi bi-plus-lg me-1"></i>Nuevo Proveedor
                </a>
            }
            else
            {
                <button type="button" class="btn btn-success" disabled title="Necesitas nivel 3 o superior para crear proveedores">
                    <i class="bi bi-plus-lg me-1"></i>Nuevo Proveedor
                </button>
            }
        </div>
    </div>
</div>

<!-- Estadísticas rápidas -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card border-primary">
            <div class="card-body text-center">
                <i class="bi bi-building display-6 text-primary"></i>
                <h3 class="mt-2">@Model.TotalProveedores</h3>
                <p class="text-muted mb-0">Total de Proveedores</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-success">
            <div class="card-body text-center">
                <i class="bi bi-check-circle display-6 text-success"></i>
                <h3 class="mt-2">@Model.ProveedoresActivos</h3>
                <p class="text-muted mb-0">Proveedores Activos</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-warning">
            <div class="card-body text-center">
                <i class="bi bi-pause-circle display-6 text-warning"></i>
                <h3 class="mt-2">@(Model.TotalProveedores - Model.ProveedoresActivos)</h3>
                <p class="text-muted mb-0">Proveedores Inactivos</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-info">
            <div class="card-body text-center">
                <i class="bi bi-tags display-6 text-info"></i>
                <h3 class="mt-2">@Model.Categorias.Count</h3>
                <p class="text-muted mb-0">Categorías</p>
            </div>
        </div>
    </div>
</div>

<!-- Filtros de búsqueda -->
<div class="card mb-4">
    <div class="card-header">
        <i class="bi bi-funnel me-2"></i><strong>Filtros de Búsqueda</strong>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label for="busquedaNombre" class="form-label">Buscar</label>
                <input type="text" class="form-control" id="busquedaNombre" name="busquedaNombre" 
                       value="@Model.BusquedaNombre" placeholder="Nombre, RFC o código...">
            </div>
            <div class="col-md-2">
                <label for="filtroCategoria" class="form-label">Categoría</label>
                <select class="form-select" id="filtroCategoria" name="filtroCategoria">
                    <option value="">Todas las categorías</option>
                    @foreach (var categoria in Model.Categorias)
                    {
                        <option value="@categoria" selected="@(Model.FiltroCategoria == categoria)">@categoria</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label for="filtroCalificacion" class="form-label">Calificación</label>
                <select class="form-select" id="filtroCalificacion" name="filtroCalificacion">
                    <option value="">Todas</option>
                    <option value="5" selected="@(Model.FiltroCalificacion == 5)">????? (5)</option>
                    <option value="4" selected="@(Model.FiltroCalificacion == 4)">????? (4)</option>
                    <option value="3" selected="@(Model.FiltroCalificacion == 3)">????? (3)</option>
                    <option value="2" selected="@(Model.FiltroCalificacion == 2)">????? (2)</option>
                    <option value="1" selected="@(Model.FiltroCalificacion == 1)">????? (1)</option>
                </select>
            </div>
            <div class="col-md-2">
                <label for="filtroActivo" class="form-label">Estado</label>
                <select class="form-select" id="filtroActivo" name="filtroActivo">
                    <option value="">Todos los estados</option>
                    <option value="true" selected="@(Model.FiltroActivo == true)">Solo activos</option>
                    <option value="false" selected="@(Model.FiltroActivo == false)">Solo inactivos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">&nbsp;</label>
                <div class="d-grid gap-2 d-md-flex">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i>Filtrar
                    </button>
                    <a href="@Url.Page("Index")" class="btn btn-outline-secondary">
                        <i class="bi bi-x-lg me-1"></i>Limpiar
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Lista de proveedores -->
<div class="card">
    <div class="card-header">
        <i class="bi bi-list-ul me-2"></i><strong>Lista de Proveedores (@Model.Proveedores.Count)</strong>
    </div>
    <div class="card-body p-0">
        @if (Model.Proveedores.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Proveedor</th>
                            <th>Contacto</th>
                            <th>Categoría</th>
                            <th>Productos</th>
                            <th>Calificación</th>
                            <th>Condiciones</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var proveedor in Model.Proveedores)
                        {
                            <tr>
                                <td>
                                    <div>
                                        <strong>@proveedor.NombreComercial</strong>
                                        @if (!string.IsNullOrEmpty(proveedor.CodigoProveedor))
                                        {
                                            <br><small class="text-muted">@proveedor.CodigoProveedor</small>
                                        }
                                        @if (!string.IsNullOrEmpty(proveedor.Rfc))
                                        {
                                            <br><small class="text-info">RFC: @proveedor.Rfc</small>
                                        }
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(proveedor.ContactoPrincipal))
                                    {
                                        <div><strong>@proveedor.ContactoPrincipal</strong></div>
                                    }
                                    @if (!string.IsNullOrEmpty(proveedor.TelefonoPrincipal))
                                    {
                                        <div><small><i class="bi bi-telephone me-1"></i>@proveedor.TelefonoPrincipal</small></div>
                                    }
                                    @if (!string.IsNullOrEmpty(proveedor.Email))
                                    {
                                        <div><small><i class="bi bi-envelope me-1"></i>@proveedor.Email</small></div>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@proveedor.Categoria</span>
                                </td>
                                <td>
                                    <small class="text-muted">@proveedor.ProductosResumen</small>
                                </td>
                                <td>
                                    @if (proveedor.Calificacion.HasValue)
                                    {
                                        <div class="text-warning">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= proveedor.Calificacion.Value)
                                                {
                                                    <i class="bi bi-star-fill"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star"></i>
                                                }
                                            }
                                        </div>
                                        <small class="text-muted">(@proveedor.Calificacion.Value)/5</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">Sin calificar</small>
                                    }
                                </td>
                                <td>
                                    <div><small>@proveedor.EstadoCredito</small></div>
                                    <div><small class="text-muted">@proveedor.Moneda</small></div>
                                </td>
                                <td>
                                    @if (proveedor.IsActive)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactivo</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-page="Details" asp-route-id="@proveedor.Id" 
                                           class="btn btn-outline-info" title="Ver detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (Model.CanUpdateProveedores)
                                        {
                                            <a asp-page="Edit" asp-route-id="@proveedor.Id" 
                                               class="btn btn-outline-primary" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-outline-primary" disabled title="Necesitas nivel 3 o superior">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                        }
                                        @if (Model.CanDeleteProveedores)
                                        {
                                            <a asp-page="Delete" asp-route-id="@proveedor.Id" 
                                               class="btn btn-outline-danger" title="Gestionar estado">
                                                <i class="bi bi-gear"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-outline-danger" disabled title="Necesitas nivel 4 o superior">
                                                <i class="bi bi-gear"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-building-x display-1 text-muted"></i>
                <h4 class="mt-3">No se encontraron proveedores</h4>
                <p class="text-muted">
                    @if (!string.IsNullOrEmpty(Model.BusquedaNombre) || !string.IsNullOrEmpty(Model.FiltroCategoria) || Model.FiltroActivo.HasValue || Model.FiltroCalificacion.HasValue)
                    {
                        <span>No hay proveedores que coincidan con los filtros aplicados.</span>
                    }
                    else
                    {
                        <span>Comienza agregando el primer proveedor al catálogo.</span>
                    }
                </p>
                <a asp-page="Create" class="btn btn-success">
                    <i class="bi bi-plus-lg me-1"></i>Agregar Primer Proveedor
                </a>
            </div>
        }
    </div>
</div>

<!-- Información de ayuda -->
<div class="row mt-4">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-info-circle me-2"></i><strong>Información sobre Proveedores</strong>
            </div>
            <div class="card-body">
                <h6>Categorías Principales:</h6>
                <ul class="small">
                    <li><strong>Productos de belleza:</strong> Shampoos, tratamientos, styling</li>
                    <li><strong>Accesorios infantiles:</strong> Vinchas, moños, decorativos</li>
                    <li><strong>Productos químicos:</strong> Tintes temporales, tratamientos</li>
                    <li><strong>Juguetes y premios:</strong> Obsequios para niños</li>
                    <li><strong>Mobiliario:</strong> Sillas, decoración, espejos</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-lightbulb me-2"></i><strong>Gestión de Proveedores</strong>
            </div>
            <div class="card-body">
                <ul class="small">
                    <li>Mantén actualizada la información de contacto</li>
                    <li>Califica a los proveedores según su desempeño</li>
                    <li>Registra las condiciones de pago y crédito</li>
                    <li>Documenta los tipos de productos que manejan</li>
                    <li>Desactiva en lugar de eliminar proveedores</li>
                </ul>
            </div>
        </div>
    </div>
</div>