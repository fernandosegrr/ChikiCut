@page
@model ChikiCut.web.Pages.Operaciones.Clientes.EditModel
@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            @if (!Model.HasUpdatePermission)
            {
                <div class="alert alert-danger">No tienes permiso para editar clientes.</div>
            }
            else
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>Editar Cliente</h4>
                    </div>
                    <div class="card-body">
                        @if (!Model.Cliente.IsActive)
                        {
                            <form method="post" asp-page-handler="Activar" class="mb-3">
                                <input type="hidden" asp-for="Cliente.Id" />
                                <button type="submit" class="btn btn-success btn-sm">Activar Cliente</button>
                            </form>
                        }
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Cliente.Id" />
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Nombre Completo</label>
                                    <input asp-for="Cliente.NombreCompleto" class="form-control" />
                                    <span asp-validation-for="Cliente.NombreCompleto" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Email</label>
                                    <input asp-for="Cliente.Email" class="form-control" />
                                    <span asp-validation-for="Cliente.Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Teléfono</label>
                                    <input asp-for="Cliente.Telefono" class="form-control" />
                                    <span asp-validation-for="Cliente.Telefono" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Fecha de Nacimiento</label>
                                    <input asp-for="Cliente.FechaNacimiento" type="date" class="form-control" />
                                    <span asp-validation-for="Cliente.FechaNacimiento" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Género</label>
                                    <input asp-for="Cliente.Genero" class="form-control" />
                                    <span asp-validation-for="Cliente.Genero" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Dirección</label>
                                    <input asp-for="Cliente.Direccion" class="form-control" />
                                    <span asp-validation-for="Cliente.Direccion" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Ciudad</label>
                                    <input asp-for="Cliente.Ciudad" class="form-control" />
                                    <span asp-validation-for="Cliente.Ciudad" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Estado</label>
                                    <input asp-for="Cliente.Estado" class="form-control" />
                                    <span asp-validation-for="Cliente.Estado" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Código Postal</label>
                                    <input asp-for="Cliente.CodigoPostal" class="form-control" />
                                    <span asp-validation-for="Cliente.CodigoPostal" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">País</label>
                                    <input asp-for="Cliente.Pais" class="form-control" />
                                    <span asp-validation-for="Cliente.Pais" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Notas</label>
                                    <textarea asp-for="Cliente.Notas" class="form-control"></textarea>
                                    <span asp-validation-for="Cliente.Notas" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary me-2">Guardar Cambios</button>
                                <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
