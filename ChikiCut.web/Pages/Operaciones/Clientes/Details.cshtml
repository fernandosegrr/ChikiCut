@page
@model ChikiCut.web.Pages.Operaciones.Clientes.DetailsModel
@{
    ViewData["Title"] = "Detalles del Cliente";
}

<h1>Detalles del Cliente</h1>

@if (!Model.HasReadPermission)
{
    <div class="alert alert-danger">No tienes permiso para ver clientes.</div>
}
else if (Model.Cliente == null)
{
    <div class="alert alert-warning">Cliente no encontrado.</div>
}
else
{
    <div>
        <h4>Cliente</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Nombre Completo</dt>
            <dd class="col-sm-10">@Model.Cliente.NombreCompleto</dd>
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Cliente.Email</dd>
            <dt class="col-sm-2">Teléfono</dt>
            <dd class="col-sm-10">@Model.Cliente.Telefono</dd>
            <dt class="col-sm-2">Fecha Nacimiento</dt>
            <dd class="col-sm-10">@Model.Cliente.FechaNacimiento?.ToString("dd/MM/yyyy")</dd>
            <dt class="col-sm-2">Género</dt>
            <dd class="col-sm-10">@Model.Cliente.Genero</dd>
            <dt class="col-sm-2">Dirección</dt>
            <dd class="col-sm-10">@Model.Cliente.Direccion</dd>
            <dt class="col-sm-2">Ciudad</dt>
            <dd class="col-sm-10">@Model.Cliente.Ciudad</dd>
            <dt class="col-sm-2">Estado</dt>
            <dd class="col-sm-10">@Model.Cliente.Estado</dd>
            <dt class="col-sm-2">Código Postal</dt>
            <dd class="col-sm-10">@Model.Cliente.CodigoPostal</dd>
            <dt class="col-sm-2">País</dt>
            <dd class="col-sm-10">@Model.Cliente.Pais</dd>
            <dt class="col-sm-2">Notas</dt>
            <dd class="col-sm-10">@Model.Cliente.Notas</dd>
        </dl>
    </div>
    <a asp-page="Edit" asp-route-id="@Model.Cliente.Id" class="btn btn-warning">Editar</a>
    <a asp-page="Index" class="btn btn-secondary">Volver</a>
}
