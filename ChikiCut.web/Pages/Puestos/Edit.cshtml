@page
@model ChikiCut.web.Pages.Puestos.EditModel
@{
    ViewData["Title"] = "Editar Puesto";
}

<div class="page-header mb-4">
    <h1><i class="bi bi-pencil me-2"></i>Editar Puesto</h1>
    <p class="text-muted">Modifica la información del puesto: @Model.Puesto.Nombre</p>
</div>

<div class="row">
    <div class="col-lg-8">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Puesto.Id" />
            <input type="hidden" asp-for="Puesto.CreatedAt" />

            <!-- Información Básica -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-person-workspace me-2"></i><strong>Información del Puesto</strong>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label asp-for="Puesto.Nombre" class="form-label">Nombre del Puesto *</label>
                                <input asp-for="Puesto.Nombre" class="form-control" />
                                <span asp-validation-for="Puesto.Nombre" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Puesto.NivelJerarquico" class="form-label">Nivel Jerárquico *</label>
                                <select asp-for="Puesto.NivelJerarquico" class="form-select">
                                    <option value="1">1 - Operativo</option>
                                    <option value="2">2 - Especialista</option>
                                    <option value="3">3 - Supervisor</option>
                                    <option value="4">4 - Gerencial</option>
                                </select>
                                <span asp-validation-for="Puesto.NivelJerarquico" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Puesto.Descripcion" class="form-label">Descripción</label>
                        <textarea asp-for="Puesto.Descripcion" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Puesto.Descripcion" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Información Salarial -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-currency-dollar me-2"></i><strong>Rango Salarial</strong>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Puesto.SalarioBaseMinimo" class="form-label">Salario Base Mínimo</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Puesto.SalarioBaseMinimo" type="number" step="0.01" class="form-control" />
                                </div>
                                <span asp-validation-for="Puesto.SalarioBaseMinimo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Puesto.SalarioBaseMaximo" class="form-label">Salario Base Máximo</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Puesto.SalarioBaseMaximo" type="number" step="0.01" class="form-control" />
                                </div>
                                <span asp-validation-for="Puesto.SalarioBaseMaximo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Configuración -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-gear me-2"></i><strong>Configuración</strong>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-check">
                                <input asp-for="Puesto.RequiereExperiencia" class="form-check-input" />
                                <label asp-for="Puesto.RequiereExperiencia" class="form-check-label">
                                    Requiere Experiencia Previa
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input asp-for="Puesto.IsActive" class="form-check-input" />
                                <label asp-for="Puesto.IsActive" class="form-check-label">
                                    Puesto Activo
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i>Guardar Cambios
                </button>
                <a asp-page="Details" asp-route-id="@Model.Puesto.Id" class="btn btn-info">
                    <i class="bi bi-eye me-1"></i>Ver Detalles
                </a>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Cancelar
                </a>
            </div>
        </form>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-info-circle me-2"></i><strong>Información</strong>
            </div>
            <div class="card-body">
                <p class="small text-muted"><strong>Campos editables:</strong></p>
                <ul class="small text-muted">
                    <li>Nombre y descripción</li>
                    <li>Nivel jerárquico</li>
                    <li>Rango salarial</li>
                    <li>Configuración de experiencia</li>
                    <li>Estado activo/inactivo</li>
                </ul>
                
                <hr>
                
                <p class="small text-muted"><strong>Nota:</strong> Los cambios en el puesto afectarán a todos los empleados que lo tengan asignado.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}