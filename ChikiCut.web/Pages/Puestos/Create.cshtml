@page
@model ChikiCut.web.Pages.Puestos.CreateModel
@{
    ViewData["Title"] = "Nuevo Puesto";
}

<div class="page-header mb-4">
    <h1><i class="bi bi-plus-circle me-2"></i>Nuevo Puesto</h1>
    <p class="text-muted">Registra un nuevo puesto de trabajo en el sistema</p>
</div>

<div class="row">
    <div class="col-lg-8">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- Información Básica -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-person-workspace me-2"></i><strong>Información del Puesto</strong>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label asp-for="Puesto.Nombre" class="form-label">Nombre del Puesto *</label>
                                <input asp-for="Puesto.Nombre" class="form-control" placeholder="Ej. Estilista Principal" />
                                <span asp-validation-for="Puesto.Nombre" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Puesto.NivelJerarquico" class="form-label">Nivel Jerárquico *</label>
                                <select asp-for="Puesto.NivelJerarquico" class="form-select">
                                    <option value="1">1 - Operativo</option>
                                    <option value="2">2 - Especialista</option>
                                    <option value="3">3 - Supervisor</option>
                                    <option value="4">4 - Gerencial</option>
                                </select>
                                <span asp-validation-for="Puesto.NivelJerarquico" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Puesto.Descripcion" class="form-label">Descripción</label>
                        <textarea asp-for="Puesto.Descripcion" class="form-control" rows="3" 
                                  placeholder="Descripción detallada de las responsabilidades del puesto..."></textarea>
                        <span asp-validation-for="Puesto.Descripcion" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Información Salarial -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-currency-dollar me-2"></i><strong>Rango Salarial</strong>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Puesto.SalarioBaseMinimo" class="form-label">Salario Base Mínimo</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Puesto.SalarioBaseMinimo" type="number" step="0.01" class="form-control" 
                                           placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Puesto.SalarioBaseMinimo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Puesto.SalarioBaseMaximo" class="form-label">Salario Base Máximo</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Puesto.SalarioBaseMaximo" type="number" step="0.01" class="form-control" 
                                           placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Puesto.SalarioBaseMaximo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        <small>El rango salarial es opcional y sirve como referencia para asignar salarios a empleados.</small>
                    </div>
                </div>
            </div>

            <!-- Configuración -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-gear me-2"></i><strong>Configuración</strong>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-check">
                                <input asp-for="Puesto.RequiereExperiencia" class="form-check-input" />
                                <label asp-for="Puesto.RequiereExperiencia" class="form-check-label">
                                    Requiere Experiencia Previa
                                </label>
                            </div>
                            <small class="text-muted">Marca esta opción si el puesto requiere experiencia laboral previa.</small>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input asp-for="Puesto.IsActive" class="form-check-input" />
                                <label asp-for="Puesto.IsActive" class="form-check-label">
                                    Puesto Activo
                                </label>
                            </div>
                            <small class="text-muted">Los puestos activos estarán disponibles para asignar a empleados.</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle me-1"></i>Crear Puesto
                </button>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Cancelar
                </a>
            </div>
        </form>
    </div>

    <!-- Panel de ayuda -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-info-circle me-2"></i><strong>Información</strong>
            </div>
            <div class="card-body">
                <p class="small text-muted mb-2"><strong>Campos obligatorios (*)</strong></p>
                <ul class="small text-muted">
                    <li>Nombre del puesto</li>
                    <li>Nivel jerárquico</li>
                </ul>
                
                <hr class="my-3">
                
                <p class="small text-muted mb-2"><strong>Niveles Jerárquicos:</strong></p>
                <ul class="small text-muted">
                    <li><strong>1 - Operativo:</strong> Personal de base</li>
                    <li><strong>2 - Especialista:</strong> Personal especializado</li>
                    <li><strong>3 - Supervisor:</strong> Mandos medios</li>
                    <li><strong>4 - Gerencial:</strong> Alta dirección</li>
                </ul>
                
                <hr class="my-3">
                
                <p class="small text-muted mb-2"><strong>Ejemplos de puestos:</strong></p>
                <ul class="small text-muted">
                    <li>Estilista</li>
                    <li>Estilista Principal</li>
                    <li>Recepcionista</li>
                    <li>Gerente de Sucursal</li>
                    <li>Asistente de Estilista</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}