@page
@model ChikiCut.web.Pages.Usuarios.DetailsModel
@{
    ViewData["Title"] = "Detalles del Usuario";
}

<div class="page-header mb-4">
    <div class="row align-items-center">
        <div class="col">
            <h1><i class="bi bi-person-circle me-2"></i>Detalles del Usuario</h1>
            <p class="text-muted mb-0">Información completa de la cuenta de usuario</p>
        </div>
        <div class="col-auto">
            <a asp-page="Edit" asp-route-id="@Model.Usuario.Id" class="btn btn-primary">
                <i class="bi bi-pencil me-1"></i>Editar
            </a>
        </div>
    </div>
</div>

<div class="row">
    <!-- Información principal -->
    <div class="col-lg-8">
        <!-- Información del Usuario -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-person-circle me-2"></i><strong>Información del Usuario</strong>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Código:</dt>
                            <dd class="col-sm-7"><span class="badge bg-secondary">@Model.Usuario.CodigoUsuario</span></dd>
                            <dt class="col-sm-5">Email:</dt>
                            <dd class="col-sm-7">
                                <i class="bi bi-envelope me-1"></i>@Model.Usuario.Email
                            </dd>
                            <dt class="col-sm-5">Estado:</dt>
                            <dd class="col-sm-7">
                                @if (Model.Usuario.EstaBloqueado)
                                {
                                    <span class="badge bg-warning">
                                        <i class="bi bi-lock me-1"></i>Bloqueado hasta @Model.Usuario.BloqueadoHasta?.ToString("dd/MM/yyyy HH:mm")
                                    </span>
                                }
                                else if (Model.Usuario.IsActive)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>Activo
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-x-circle me-1"></i>Inactivo
                                    </span>
                                }
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Rol:</dt>
                            <dd class="col-sm-7">
                                <span class="badge @(Model.Usuario.Rol.NivelAcceso switch 
                                {
                                    5 => "bg-danger",
                                    4 => "bg-warning", 
                                    3 => "bg-info",
                                    2 => "bg-primary",
                                    1 => "bg-secondary",
                                    _ => "bg-dark"
                                })">
                                    @Model.Usuario.Rol.Nombre
                                </span>
                                <small class="text-muted d-block">@Model.Usuario.Rol.NivelDescripcion</small>
                            </dd>
                            <dt class="col-sm-5">Último Acceso:</dt>
                            <dd class="col-sm-7">
                                @if (Model.Usuario.UltimoAcceso.HasValue)
                                {
                                    <small>@Model.Usuario.UltimoAcceso.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                }
                                else
                                {
                                    <small class="text-muted">Nunca ha iniciado sesión</small>
                                }
                            </dd>
                            <dt class="col-sm-5">Intentos Fallidos:</dt>
                            <dd class="col-sm-7">
                                @if (Model.Usuario.IntentosFallidos > 0)
                                {
                                    <span class="badge bg-warning">@Model.Usuario.IntentosFallidos</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">0</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <!-- Información del Empleado Vinculado -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-person-badge me-2"></i><strong>Empleado Vinculado</strong>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Nombre Completo:</dt>
                            <dd class="col-sm-7">@Model.Usuario.Empleado.NombreCompleto</dd>
                            <dt class="col-sm-5">Código Empleado:</dt>
                            <dd class="col-sm-7"><span class="badge bg-info">@Model.Usuario.Empleado.CodigoEmpleado</span></dd>
                            <dt class="col-sm-5">Email Empleado:</dt>
                            <dd class="col-sm-7">
                                @if (!string.IsNullOrEmpty(Model.Usuario.Empleado.Email))
                                {
                                    @Model.Usuario.Empleado.Email
                                }
                                else
                                {
                                    <span class="text-muted">No registrado</span>
                                }
                            </dd>
                            <dt class="col-sm-5">Teléfono:</dt>
                            <dd class="col-sm-7">@Model.Usuario.Empleado.Telefono</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Puesto:</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-info">@Model.Usuario.Empleado.PuestoNavegacion?.Nombre</span>
                            </dd>
                            <dt class="col-sm-5">Sucursal:</dt>
                            <dd class="col-sm-7">@Model.Usuario.Empleado.Sucursal?.Name</dd>
                            <dt class="col-sm-5">Fecha Ingreso:</dt>
                            <dd class="col-sm-7">@Model.Usuario.Empleado.FechaIngreso.ToString("dd/MM/yyyy")</dd>
                            <dt class="col-sm-5">Estado Empleado:</dt>
                            <dd class="col-sm-7">
                                <span class="badge @(Model.Usuario.Empleado.IsActive ? "bg-success" : "bg-danger")">
                                    @(Model.Usuario.Empleado.IsActive ? "Activo" : "Inactivo")
                                </span>
                            </dd>
                        </dl>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="/Empleados/Details/@Model.Usuario.Empleado.Id" class="btn btn-sm btn-outline-info">
                        <i class="bi bi-eye me-1"></i>Ver Detalles del Empleado
                    </a>
                </div>
            </div>
        </div>

        <!-- Información del Rol y Permisos -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-shield-check me-2"></i><strong>Rol y Permisos</strong>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Rol Asignado:</dt>
                            <dd class="col-sm-7">@Model.Usuario.Rol.Nombre</dd>
                            <dt class="col-sm-5">Descripción:</dt>
                            <dd class="col-sm-7">
                                @if (!string.IsNullOrEmpty(Model.Usuario.Rol.Descripcion))
                                {
                                    @Model.Usuario.Rol.Descripcion
                                }
                                else
                                {
                                    <span class="text-muted">Sin descripción</span>
                                }
                            </dd>
                            <dt class="col-sm-5">Nivel de Acceso:</dt>
                            <dd class="col-sm-7">@Model.Usuario.Rol.NivelDescripcion</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Permisos:</dt>
                            <dd class="col-sm-7">@Model.Usuario.Rol.PermisosResumen</dd>
                            <dt class="col-sm-5">Estado del Rol:</dt>
                            <dd class="col-sm-7">
                                <span class="badge @(Model.Usuario.Rol.IsActive ? "bg-success" : "bg-danger")">
                                    @(Model.Usuario.Rol.IsActive ? "Activo" : "Inactivo")
                                </span>
                            </dd>
                        </dl>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="/Roles/Details/@Model.Usuario.Rol.Id" class="btn btn-sm btn-outline-info">
                        <i class="bi bi-eye me-1"></i>Ver Detalles del Rol
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Panel lateral -->
    <div class="col-lg-4">
        <!-- Acciones rápidas -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-lightning me-2"></i><strong>Acciones Rápidas</strong>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-page="Edit" asp-route-id="@Model.Usuario.Id" class="btn btn-primary">
                        <i class="bi bi-pencil me-1"></i>Editar Usuario
                    </a>
                    
                    @if (Model.Usuario.EstaBloqueado)
                    {
                        <a href="/Usuarios/Unlock/@Model.Usuario.Id" class="btn btn-success">
                            <i class="bi bi-unlock me-1"></i>Desbloquear Usuario
                        </a>
                    }
                    
                    <a asp-page="Delete" asp-route-id="@Model.Usuario.Id" 
                       class="btn @(Model.Usuario.IsActive ? "btn-warning" : "btn-success")">
                        <i class="bi @(Model.Usuario.IsActive ? "bi-person-x" : "bi-person-check") me-1"></i>
                        @(Model.Usuario.IsActive ? "Desactivar" : "Reactivar") Usuario
                    </a>
                </div>
            </div>
        </div>

        <!-- Información del sistema -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-clock-history me-2"></i><strong>Información del Sistema</strong>
            </div>
            <div class="card-body">
                <dl class="row small">
                    <dt class="col-sm-6">Creado:</dt>
                    <dd class="col-sm-6">@Model.Usuario.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                    
                    @if (Model.Usuario.UpdatedAt.HasValue)
                    {
                        <dt class="col-sm-6">Modificado:</dt>
                        <dd class="col-sm-6">@Model.Usuario.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                    }
                    
                    @if (Model.Usuario.UsuarioCreador != null)
                    {
                        <dt class="col-sm-6">Creado por:</dt>
                        <dd class="col-sm-6">@Model.Usuario.UsuarioCreador.NombreCompleto</dd>
                    }
                </dl>
            </div>
        </div>

        <!-- Estadísticas de seguridad -->
        <div class="card">
            <div class="card-header">
                <i class="bi bi-shield-check me-2"></i><strong>Seguridad</strong>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="card bg-light">
                            <div class="card-body py-2">
                                <h5 class="@(Model.Usuario.IntentosFallidos > 0 ? "text-warning" : "text-success") mb-0">
                                    @Model.Usuario.IntentosFallidos
                                </h5>
                                <small class="text-muted">Intentos Fallidos</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card bg-light">
                            <div class="card-body py-2">
                                <h5 class="@(Model.Usuario.PuedeAcceder ? "text-success" : "text-danger") mb-0">
                                    @(Model.Usuario.PuedeAcceder ? "SÍ" : "NO")
                                </h5>
                                <small class="text-muted">Puede Acceder</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-page="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-1"></i>Volver a la Lista
    </a>
</div>