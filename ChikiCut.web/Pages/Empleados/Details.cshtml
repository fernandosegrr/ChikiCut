@page
@model ChikiCut.web.Pages.Empleados.DetailsModel
@{
    ViewData["Title"] = "Detalles del Empleado";
}

<div class="page-header mb-4">
    <div class="row align-items-center">
        <div class="col">
            <h1><i class="bi bi-person me-2"></i>@Model.Empleado!.NombreCompleto</h1>
            <p class="text-muted mb-0">
                <span class="badge bg-secondary me-2">@Model.Empleado.CodigoEmpleado</span>
                <span class="badge bg-info">@Model.Empleado.PuestoNombre</span>
                @if (!Model.Empleado.IsActive)
                {
                    <span class="badge bg-danger ms-2">Inactivo</span>
                }
            </p>
        </div>
        <div class="col-auto">
            <a asp-page="Edit" asp-route-id="@Model.Empleado.Id" class="btn btn-primary">
                <i class="bi bi-pencil me-1"></i>Editar
            </a>
            <a asp-page="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-1"></i>Volver
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <!-- Información Personal -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-person me-2"></i><strong>Información Personal</strong>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Nombre:</dt>
                            <dd class="col-sm-8">@Model.Empleado.NombreCompleto</dd>
                            @if (!string.IsNullOrEmpty(Model.Empleado.Alias))
                            {
                                <dt class="col-sm-4">Alias:</dt>
                                <dd class="col-sm-8"><span class="badge bg-light text-dark">@Model.Empleado.Alias</span></dd>
                            }
                            @if (Model.Empleado.FechaNacimiento.HasValue)
                            {
                                <dt class="col-sm-4">Fecha Nacimiento:</dt>
                                <dd class="col-sm-8">@Model.Empleado.FechaNacimiento.Value.ToString("dd/MM/yyyy")</dd>
                            }
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            @if (!string.IsNullOrEmpty(Model.Empleado.Curp))
                            {
                                <dt class="col-sm-4">CURP:</dt>
                                <dd class="col-sm-8"><code>@Model.Empleado.Curp</code></dd>
                            }
                            @if (!string.IsNullOrEmpty(Model.Empleado.Rfc))
                            {
                                <dt class="col-sm-4">RFC:</dt>
                                <dd class="col-sm-8"><code>@Model.Empleado.Rfc</code></dd>
                            }
                            @if (!string.IsNullOrEmpty(Model.Empleado.Nss))
                            {
                                <dt class="col-sm-4">NSS:</dt>
                                <dd class="col-sm-8"><code>@Model.Empleado.Nss</code></dd>
                            }
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <!-- Información Laboral -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-briefcase me-2"></i><strong>Información Laboral</strong>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Sucursal:</dt>
                            <dd class="col-sm-8">@Model.Empleado.Sucursal.Name</dd>
                            <dt class="col-sm-4">Puesto:</dt>
                            <dd class="col-sm-8"><span class="badge bg-info">@Model.Empleado.PuestoNombre</span></dd>
                            <dt class="col-sm-4">Fecha Ingreso:</dt>
                            <dd class="col-sm-8">@Model.Empleado.FechaIngreso.ToString("dd/MM/yyyy")</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            @if (Model.Empleado.SalarioBase.HasValue)
                            {
                                <dt class="col-sm-4">Salario Base:</dt>
                                <dd class="col-sm-8">@Model.Empleado.SalarioBase.Value.ToString("C", new System.Globalization.CultureInfo("es-MX"))</dd>
                            }
                            <dt class="col-sm-4">Estado:</dt>
                            <dd class="col-sm-8">
                                <span class="badge @(Model.Empleado.IsActive ? "bg-success" : "bg-danger")">
                                    @(Model.Empleado.IsActive ? "Activo" : "Inactivo")
                                </span>
                            </dd>
                            @if (Model.Empleado.FechaBaja.HasValue)
                            {
                                <dt class="col-sm-4">Fecha Baja:</dt>
                                <dd class="col-sm-8">@Model.Empleado.FechaBaja.Value.ToString("dd/MM/yyyy")</dd>
                            }
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <!-- Especialidades -->
        @if (Model.EspecialidadesList.Any())
        {
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-scissors me-2"></i><strong>Especialidades</strong>
                </div>
                <div class="card-body">
                    @foreach (var especialidad in Model.EspecialidadesList)
                    {
                        <span class="badge bg-primary me-1 mb-1">@especialidad</span>
                    }
                </div>
            </div>
        }
    </div>

    <div class="col-lg-4">
        <!-- Información de Contacto -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-telephone me-2"></i><strong>Contacto</strong>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-4">Teléfono:</dt>
                    <dd class="col-8">
                        <a href="tel:@Model.Empleado.Telefono" class="text-decoration-none">
                            <i class="bi bi-telephone me-1"></i>@Model.Empleado.Telefono
                        </a>
                    </dd>
                    @if (!string.IsNullOrEmpty(Model.Empleado.Email))
                    {
                        <dt class="col-4">Email:</dt>
                        <dd class="col-8">
                            <a href="mailto:@Model.Empleado.Email" class="text-decoration-none">
                                <i class="bi bi-envelope me-1"></i>@Model.Empleado.Email
                            </a>
                        </dd>
                    }
                </dl>
                
                <hr>
                
                <h6>Dirección:</h6>
                <address class="mb-0">
                    @Model.Empleado.DireccionLinea1<br>
                    @if (!string.IsNullOrEmpty(Model.Empleado.DireccionLinea2))
                    {
                        @Model.Empleado.DireccionLinea2<br>
                    }
                    @Model.Empleado.Ciudad, @Model.Empleado.Estado<br>
                    @Model.Empleado.CodigoPostal, @Model.Empleado.Pais
                </address>
            </div>
        </div>

        <!-- Contacto de Emergencia -->
        @if (!string.IsNullOrEmpty(Model.Empleado.ContactoEmergenciaNombre))
        {
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-exclamation-triangle me-2"></i><strong>Contacto de Emergencia</strong>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-4">Nombre:</dt>
                        <dd class="col-8">@Model.Empleado.ContactoEmergenciaNombre</dd>
                        @if (!string.IsNullOrEmpty(Model.Empleado.ContactoEmergenciaTelefono))
                        {
                            <dt class="col-4">Teléfono:</dt>
                            <dd class="col-8">
                                <a href="tel:@Model.Empleado.ContactoEmergenciaTelefono" class="text-decoration-none">
                                    <i class="bi bi-telephone me-1"></i>@Model.Empleado.ContactoEmergenciaTelefono
                                </a>
                            </dd>
                        }
                        @if (!string.IsNullOrEmpty(Model.Empleado.ContactoEmergenciaParentesco))
                        {
                            <dt class="col-4">Parentesco:</dt>
                            <dd class="col-8">@Model.Empleado.ContactoEmergenciaParentesco</dd>
                        }
                    </dl>
                </div>
            </div>
        }

        <!-- Información del Sistema -->
        <div class="card">
            <div class="card-header">
                <i class="bi bi-info-circle me-2"></i><strong>Sistema</strong>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-6">Creado:</dt>
                    <dd class="col-6">
                        <small>@Model.Empleado.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                    </dd>
                    @if (Model.Empleado.UpdatedAt.HasValue)
                    {
                        <dt class="col-6">Modificado:</dt>
                        <dd class="col-6">
                            <small>@Model.Empleado.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</small>
                        </dd>
                    }
                </dl>
            </div>
        </div>
    </div>
</div>