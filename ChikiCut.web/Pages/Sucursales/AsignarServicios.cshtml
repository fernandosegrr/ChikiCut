@page
@model ChikiCut.web.Pages.Sucursales.AsignarServiciosModel
@{
    ViewData["Title"] = "Asignar Servicios a Sucursal";
}

<div class="page-header mb-4">
    <div class="row align-items-center">
        <div class="col">
            <h1><i class="bi bi-scissors me-2"></i>Asignar Servicios</h1>
            <p class="text-muted">
                <i class="bi bi-building me-1"></i><strong>@Model.Sucursal.Name</strong> 
                - @Model.Sucursal.City, @Model.Sucursal.State
            </p>
        </div>
        <div class="col-auto">
            <div class="btn-group" role="group">
                <a asp-page="../Sucursales/Details" asp-route-id="@Model.SucursalId" class="btn btn-info">
                    <i class="bi bi-eye me-1"></i>Ver Sucursal
                </a>
                <a asp-page="../Sucursales/Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Volver
                </a>
            </div>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Estadísticas -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white h-100">
            <div class="card-body text-center">
                <i class="bi bi-scissors display-6 mb-2"></i>
                <h3 class="card-title">@Model.TotalServicios</h3>
                <p class="card-text mb-0">Total Servicios</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white h-100">
            <div class="card-body text-center">
                <i class="bi bi-check-circle display-6 mb-2"></i>
                <h3 class="card-title">@Model.ServiciosAsignados</h3>
                <p class="card-text mb-0">Ya Asignados</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white h-100">
            <div class="card-body text-center">
                <i class="bi bi-clock-history display-6 mb-2"></i>
                <h3 class="card-title">@(Model.TotalServicios - Model.ServiciosAsignados)</h3>
                <p class="card-text mb-0">Sin Asignar</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white h-100">
            <div class="card-body text-center">
                <i class="bi bi-percent display-6 mb-2"></i>
                <h3 class="card-title">@(Model.TotalServicios > 0 ? Math.Round((double)Model.ServiciosAsignados / Model.TotalServicios * 100, 1) : 0)%</h3>
                <p class="card-text mb-0">Cobertura</p>
            </div>
        </div>
    </div>
</div>

<!-- Filtros -->
<div class="card mb-4">
    <div class="card-header">
        <i class="bi bi-funnel me-2"></i><strong>Filtros y Búsqueda</strong>
    </div>
    <div class="card-body">
        <form method="get">
            <input type="hidden" name="id" value="@Model.SucursalId" />
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">
                        <i class="bi bi-search me-1"></i>Buscar
                    </label>
                    <input name="search" value="@Model.SearchString" class="form-control" 
                           placeholder="Nombre o código...">
                </div>
                <div class="col-md-3">
                    <label class="form-label">
                        <i class="bi bi-tag me-1"></i>Categoría
                    </label>
                    <select name="categoria" class="form-select">
                        <option value="">Todas</option>
                        @foreach (var categoria in Model.CategoriasDisponibles)
                        {
                            <option value="@categoria" selected="@(Model.CategoriaFilter == categoria)">@categoria</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">
                        <i class="bi bi-filter me-1"></i>Estado
                    </label>
                    <select name="soloNoAsignados" class="form-select">
                        <option value="">Todos</option>
                        <option value="true" selected="@(Model.SoloNoAsignados == true)">Solo sin asignar</option>
                        <option value="false" selected="@(Model.SoloNoAsignados == false)">Solo asignados</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">&nbsp;</label>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search me-1"></i>Filtrar
                        </button>
                        <a asp-page="AsignarServicios" asp-route-id="@Model.SucursalId" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-clockwise me-1"></i>Limpiar
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Herramientas masivas -->
<div class="card mb-4">
    <div class="card-header">
        <i class="bi bi-tools me-2"></i><strong>Herramientas Masivas</strong>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-4">
                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-success" onclick="seleccionarTodos()">
                        <i class="bi bi-check-all me-1"></i>Seleccionar Todos
                    </button>
                    <button type="button" class="btn btn-outline-secondary" onclick="limpiarSeleccion()">
                        <i class="bi bi-x-circle me-1"></i>Limpiar
                    </button>
                </div>
            </div>
            <div class="col-md-4">
                <button type="button" class="btn btn-warning w-100" onclick="abrirConfiguracionMasiva()">
                    <i class="bi bi-gear me-1"></i>Configuración Masiva
                </button>
            </div>
            <div class="col-md-4">
                <div class="small text-muted">
                    <strong id="contadorSeleccionados">0</strong> servicios seleccionados
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Lista de servicios -->
<form method="post" id="asignacionForm">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>
    <input type="hidden" asp-for="SucursalId" />

    <div class="card">
        <div class="card-header">
            <i class="bi bi-list-ul me-2"></i><strong>Servicios Disponibles (@Model.ServiciosDisponibles.Count)</strong>
        </div>
        <div class="card-body p-0">
            @if (Model.ServiciosDisponibles.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th width="50px">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="selectAllMain" onchange="toggleSelectAll()">
                                    </div>
                                </th>
                                <th>Servicio</th>
                                <th width="120px">Precio Local</th>
                                <th width="100px">Duración</th>
                                <th width="100px">Descuento Máx</th>
                                <th width="80px">Disponible</th>
                                <th width="80px">Destacado</th>
                                <th width="100px">Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.ServiciosDisponibles.Count; i++)
                            {
                                var servicio = Model.ServiciosDisponibles[i];
                                var isAsignado = servicio.EstaAsignado;
                                
                                <tr class="@(isAsignado ? "table-success" : "")" data-servicio-id="@servicio.Servicio.Id">
                                    <td>
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input servicio-checkbox" 
                                                   name="ServiciosAsignacion[@i].Asignar" 
                                                   value="true"
                                                   checked="@isAsignado"
                                                   onchange="updateServicioRow(this, @i)">
                                            <input type="hidden" name="ServiciosAsignacion[@i].Asignar" value="false">
                                            <input type="hidden" name="ServiciosAsignacion[@i].ServicioId" value="@servicio.Servicio.Id">
                                            <input type="hidden" name="ServiciosAsignacion[@i].ServicioNombre" value="@servicio.Servicio.Nombre">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded me-2 d-flex align-items-center justify-content-center" 
                                                 style="width: 40px; height: 40px;">
                                                <i class="bi bi-scissors text-primary"></i>
                                            </div>
                                            <div>
                                                <div class="fw-bold">@servicio.Servicio.Nombre</div>
                                                <small class="text-muted">
                                                    <span class="badge bg-secondary me-1">@servicio.Servicio.Codigo</span>
                                                    <span class="badge bg-info">@servicio.Servicio.Categoria</span>
                                                </small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="input-group input-group-sm">
                                            <span class="input-group-text">$</span>
                                            <input type="number" 
                                                   name="ServiciosAsignacion[@i].PrecioLocal" 
                                                   class="form-control precio-input" 
                                                   value="@(servicio.AsignacionActual?.PrecioLocal ?? servicio.Servicio.PrecioBase)" 
                                                   step="0.01" 
                                                   min="0"
                                                   disabled="@(!isAsignado)">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="input-group input-group-sm">
                                            <input type="number" 
                                                   name="ServiciosAsignacion[@i].DuracionLocal" 
                                                   class="form-control duracion-input" 
                                                   value="@(servicio.AsignacionActual?.DuracionLocal ?? servicio.Servicio.DuracionEstimada)" 
                                                   min="0"
                                                   disabled="@(!isAsignado)">
                                            <span class="input-group-text">min</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="input-group input-group-sm">
                                            <input type="number" 
                                                   name="ServiciosAsignacion[@i].DescuentoMaximo" 
                                                   class="form-control descuento-input" 
                                                   value="@(servicio.AsignacionActual?.DescuentoMaximo ?? 0)" 
                                                   step="0.01" 
                                                   min="0" 
                                                   max="100"
                                                   disabled="@(!isAsignado)">
                                            <span class="input-group-text">%</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-check form-switch">
                                            <input type="checkbox" 
                                                   name="ServiciosAsignacion[@i].Disponible" 
                                                   class="form-check-input disponible-input" 
                                                   checked="@(servicio.AsignacionActual?.Disponible ?? true)"
                                                   disabled="@(!isAsignado)">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-check form-switch">
                                            <input type="checkbox" 
                                                   name="ServiciosAsignacion[@i].EsDestacado" 
                                                   class="form-check-input destacado-input" 
                                                   checked="false"
                                                   disabled="@(!isAsignado)">
                                        </div>
                                    </td>
                                    <td>
                                        @if (isAsignado)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>Asignado
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-dash-circle me-1"></i>Sin asignar
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                <!-- Botones de acción -->
                <div class="card-footer">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="text-muted">
                            <strong id="resumenSeleccionados">0</strong> servicios serán asignados
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle me-1"></i>Guardar Asignaciones
                            </button>
                            <button type="button" class="btn btn-info" onclick="previsualizarCambios()">
                                <i class="bi bi-eye me-1"></i>Previsualizar
                            </button>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-scissors display-1 text-muted"></i>
                    <h4 class="text-muted mt-3">No se encontraron servicios</h4>
                    <p class="text-muted">
                        @if (!string.IsNullOrEmpty(Model.SearchString) || !string.IsNullOrEmpty(Model.CategoriaFilter))
                        {
                            <span>Prueba ajustando los filtros de búsqueda.</span>
                        }
                        else
                        {
                            <span>No hay servicios disponibles en el catálogo.</span>
                        }
                    </p>
                </div>
            }
        </div>
    </div>
</form>

<!-- Modal de configuración masiva -->
<div class="modal fade" id="configuracionMasivaModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-gear me-2"></i>Configuración Masiva de Servicios
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="configuracionMasivaForm">
                    <div class="mb-3">
                        <label class="form-label">Tipo de Configuración:</label>
                        <select name="Configuracion" class="form-select" id="tipoConfiguracion" onchange="toggleConfiguracionPersonalizada()">
                            <option value="base">Usar precio base del servicio</option>
                            <option value="margen">Calcular con margen del servicio</option>
                            <option value="personalizado">Configuración personalizada</option>
                        </select>
                    </div>
                    
                    <div id="configuracionPersonalizada" style="display: none;">
                        <div class="mb-3">
                            <label class="form-label">Precio Local:</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" name="PrecioMasivo" class="form-control" step="0.01" min="0">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Duración:</label>
                            <div class="input-group">
                                <input type="number" name="DuracionMasiva" class="form-control" min="0" value="30">
                                <span class="input-group-text">min</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Servicios seleccionados:</strong> <span id="serviciosSeleccionadosModal">0</span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="aplicarConfiguracionMasiva()">
                    <i class="bi bi-check-circle me-1"></i>Aplicar
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let serviciosSeleccionados = new Set();

        document.addEventListener('DOMContentLoaded', function() {
            actualizarContadores();
            actualizarEstadoSelectAll();
        });

        function updateServicioRow(checkbox, index) {
            const row = checkbox.closest('tr');
            const servicioId = row.dataset.servicioId;
            const isChecked = checkbox.checked;
            
            // Habilitar/deshabilitar inputs de la fila
            const inputs = row.querySelectorAll('.precio-input, .duracion-input, .descuento-input, .disponible-input, .destacado-input');
            inputs.forEach(input => {
                input.disabled = !isChecked;
            });
            
            // Actualizar estilos de la fila
            if (isChecked) {
                row.classList.add('table-success');
                serviciosSeleccionados.add(servicioId);
            } else {
                row.classList.remove('table-success');
                serviciosSeleccionados.delete(servicioId);
            }
            
            actualizarContadores();
            actualizarEstadoSelectAll();
        }

        function toggleSelectAll() {
            const selectAllCheckbox = document.getElementById('selectAllMain');
            const checkboxes = document.querySelectorAll('.servicio-checkbox');
            
            checkboxes.forEach((checkbox, index) => {
                checkbox.checked = selectAllCheckbox.checked;
                updateServicioRow(checkbox, index);
            });
        }

        function seleccionarTodos() {
            const checkboxes = document.querySelectorAll('.servicio-checkbox');
            checkboxes.forEach((checkbox, index) => {
                checkbox.checked = true;
                updateServicioRow(checkbox, index);
            });
            document.getElementById('selectAllMain').checked = true;
        }

        function limpiarSeleccion() {
            const checkboxes = document.querySelectorAll('.servicio-checkbox');
            checkboxes.forEach((checkbox, index) => {
                checkbox.checked = false;
                updateServicioRow(checkbox, index);
            });
            document.getElementById('selectAllMain').checked = false;
        }

        function actualizarContadores() {
            const seleccionados = document.querySelectorAll('.servicio-checkbox:checked').length;
            document.getElementById('contadorSeleccionados').textContent = seleccionados;
            document.getElementById('resumenSeleccionados').textContent = seleccionados;
        }

        function actualizarEstadoSelectAll() {
            const checkboxes = document.querySelectorAll('.servicio-checkbox');
            const checkedBoxes = document.querySelectorAll('.servicio-checkbox:checked');
            const selectAllCheckbox = document.getElementById('selectAllMain');
            
            if (checkedBoxes.length === 0) {
                selectAllCheckbox.checked = false;
                selectAllCheckbox.indeterminate = false;
            } else if (checkedBoxes.length === checkboxes.length) {
                selectAllCheckbox.checked = true;
                selectAllCheckbox.indeterminate = false;
            } else {
                selectAllCheckbox.checked = false;
                selectAllCheckbox.indeterminate = true;
            }
        }

        function abrirConfiguracionMasiva() {
            const seleccionados = document.querySelectorAll('.servicio-checkbox:checked').length;
            
            if (seleccionados === 0) {
                alert('Por favor selecciona al menos un servicio.');
                return;
            }
            
            document.getElementById('serviciosSeleccionadosModal').textContent = seleccionados;
            
            const modal = new bootstrap.Modal(document.getElementById('configuracionMasivaModal'));
            modal.show();
        }

        function toggleConfiguracionPersonalizada() {
            const select = document.getElementById('tipoConfiguracion');
            const div = document.getElementById('configuracionPersonalizada');
            
            div.style.display = select.value === 'personalizado' ? 'block' : 'none';
        }

        async function aplicarConfiguracionMasiva() {
            const form = document.getElementById('configuracionMasivaForm');
            const formData = new FormData(form);
            
            // Agregar servicios seleccionados
            const checkboxes = document.querySelectorAll('.servicio-checkbox:checked');
            checkboxes.forEach(checkbox => {
                const row = checkbox.closest('tr');
                const servicioId = row.dataset.servicioId;
                formData.append('ServiciosSeleccionados', servicioId);
            });
            
            try {
                const response = await fetch('?handler=AplicarConfiguracionMasiva', {
                    method: 'POST',
                    body: formData
                });
                
                if (response.ok) {
                    const result = await response.json();
                    
                    if (result.success) {
                        // Aplicar los resultados a los inputs
                        result.resultados.forEach(item => {
                            const row = document.querySelector(`tr[data-servicio-id="${item.servicioId}"]`);
                            if (row) {
                                const precioInput = row.querySelector('.precio-input');
                                const duracionInput = row.querySelector('.duracion-input');
                                
                                if (precioInput) precioInput.value = item.precio;
                                if (duracionInput) duracionInput.value = item.duracion;
                            }
                        });
                        
                        // Cerrar modal
                        const modal = bootstrap.Modal.getInstance(document.getElementById('configuracionMasivaModal'));
                        modal.hide();
                        
                        alert(`Configuración aplicada a ${result.resultados.length} servicios.`);
                    } else {
                        alert('Error: ' + result.message);
                    }
                } else {
                    throw new Error('Error en la respuesta del servidor');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error al aplicar configuración: ' + error.message);
            }
        }

        function previsualizarCambios() {
            const checkboxes = document.querySelectorAll('.servicio-checkbox:checked');
            
            if (checkboxes.length === 0) {
                alert('No hay servicios seleccionados para asignar.');
                return;
            }
            
            let resumen = `Se asignarán ${checkboxes.length} servicios a la sucursal @Model.Sucursal.Name:\n\n`;
            
            checkboxes.forEach(checkbox => {
                const row = checkbox.closest('tr');
                const nombre = row.querySelector('input[name*="ServicioNombre"]').value;
                const precio = row.querySelector('.precio-input').value;
                const duracion = row.querySelector('.duracion-input').value;
                resumen += `• ${nombre} - $${precio} (${duracion} min)\n`;
            });
            
            if (confirm(resumen + '\n¿Continuar con la asignación?')) {
                document.getElementById('asignacionForm').submit();
            }
        }
    </script>
}