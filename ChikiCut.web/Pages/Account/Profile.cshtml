@page
@model ChikiCut.web.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="page-header mb-4">
    <div class="row align-items-center">
        <div class="col">
            <h1><i class="bi bi-person-circle me-2"></i>Mi Perfil</h1>
            <p class="text-muted">Gestiona tu información personal y configuraciones de cuenta</p>
        </div>
        <div class="col-auto">
            <span class="badge @(Model.UsuarioActual.Rol.NivelAcceso switch 
            {
                5 => "bg-danger",
                4 => "bg-warning text-dark", 
                3 => "bg-info",
                2 => "bg-primary",
                1 => "bg-secondary",
                _ => "bg-dark"
            }) fs-6">
                @Model.UsuarioActual.Rol.Nombre
            </span>
        </div>
    </div>
</div>

<!-- Mensajes de éxito -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-lg-8">
        <!-- Información del Usuario -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-person-badge me-2"></i><strong>Información del Usuario</strong>
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="UpdateProfile">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Código de Usuario</label>
                                <input type="text" class="form-control" value="@Model.UsuarioActual.CodigoUsuario" readonly />
                                <div class="form-text">Este código se genera automáticamente y no se puede modificar.</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Input.Email" class="form-label">Email *</label>
                                <input asp-for="Input.Email" type="email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Rol</label>
                                <input type="text" class="form-control" value="@Model.UsuarioActual.Rol.Nombre" readonly />
                                <div class="form-text">Tu rol determina los permisos en el sistema.</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Fecha de Creación</label>
                                <input type="text" class="form-control" value="@Model.UsuarioActual.CreatedAt.ToString("dd/MM/yyyy HH:mm")" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>Actualizar Perfil
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Cambio de Contraseña -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-shield-lock me-2"></i><strong>Cambiar Contraseña</strong>
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="ChangePassword">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label asp-for="PasswordChange.CurrentPassword" class="form-label">Contraseña Actual *</label>
                                <input asp-for="PasswordChange.CurrentPassword" type="password" class="form-control" />
                                <span asp-validation-for="PasswordChange.CurrentPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="PasswordChange.NewPassword" class="form-label">Nueva Contraseña *</label>
                                <input asp-for="PasswordChange.NewPassword" type="password" class="form-control" />
                                <span asp-validation-for="PasswordChange.NewPassword" class="text-danger"></span>
                                <div class="form-text">Mínimo 6 caracteres.</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="PasswordChange.ConfirmPassword" class="form-label">Confirmar Nueva Contraseña *</label>
                                <input asp-for="PasswordChange.ConfirmPassword" type="password" class="form-control" />
                                <span asp-validation-for="PasswordChange.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-key me-1"></i>Cambiar Contraseña
                        </button>
                    </div>
                </form>
            </div>
        </div>

        @if (Model.EmpleadoVinculado != null)
        {
            <!-- Información del Empleado -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-person-workspace me-2"></i><strong>Información del Empleado</strong>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Nombre:</dt>
                                <dd class="col-sm-7">@Model.EmpleadoVinculado.NombreCompleto</dd>
                                <dt class="col-sm-5">Código:</dt>
                                <dd class="col-sm-7">@Model.EmpleadoVinculado.CodigoEmpleado</dd>
                                <dt class="col-sm-5">Puesto:</dt>
                                <dd class="col-sm-7">@Model.EmpleadoVinculado.PuestoNavegacion?.Nombre</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Sucursal:</dt>
                                <dd class="col-sm-7">@Model.EmpleadoVinculado.Sucursal?.Name</dd>
                                <dt class="col-sm-5">Teléfono:</dt>
                                <dd class="col-sm-7">@Model.EmpleadoVinculado.Telefono</dd>
                                <dt class="col-sm-5">Fecha Ingreso:</dt>
                                <dd class="col-sm-7">@Model.EmpleadoVinculado.FechaIngreso.ToString("dd/MM/yyyy")</dd>
                            </dl>
                        </div>
                    </div>
                    
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Nota:</strong> Para modificar la información del empleado, contacta al administrador del sistema.
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Panel lateral -->
    <div class="col-lg-4">
        <!-- Resumen de la cuenta -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-speedometer2 me-2"></i><strong>Resumen de la Cuenta</strong>
            </div>
            <div class="card-body">
                <div class="text-center mb-3">
                    <div class="avatar-placeholder bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" 
                         style="width: 80px; height: 80px; font-size: 2rem;">
                        @if (Model.EmpleadoVinculado != null)
                        {
                            @Model.EmpleadoVinculado.Nombre?.Substring(0, 1).ToUpper()@Model.EmpleadoVinculado.ApellidoPaterno?.Substring(0, 1).ToUpper()
                        }
                        else
                        {
                            @Model.UsuarioActual.Email.Substring(0, 1).ToUpper()
                        }
                    </div>
                </div>
                
                <div class="text-center">
                    <h5>@(Model.EmpleadoVinculado?.NombreCompleto ?? Model.UsuarioActual.Email)</h5>
                    <p class="text-muted">@Model.UsuarioActual.Rol.Nombre</p>
                </div>

                <hr>

                <dl class="row small">
                    <dt class="col-6">Estado:</dt>
                    <dd class="col-6">
                        @if (Model.UsuarioActual.IsActive)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactivo</span>
                        }
                    </dd>
                    <dt class="col-6">Último acceso:</dt>
                    <dd class="col-6">
                        @if (Model.UsuarioActual.UltimoAcceso.HasValue)
                        {
                            @Model.UsuarioActual.UltimoAcceso.Value.ToString("dd/MM/yyyy HH:mm")
                        }
                        else
                        {
                            <span class="text-muted">Primer acceso</span>
                        }
                    </dd>
                    <dt class="col-6">Nivel acceso:</dt>
                    <dd class="col-6">@Model.UsuarioActual.Rol.NivelAcceso / 5</dd>
                </dl>
            </div>
        </div>

        <!-- Actividad reciente -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-clock-history me-2"></i><strong>Actividad Reciente</strong>
            </div>
            <div class="card-body">
                @if (Model.AccesosRecientes.Any())
                {
                    <div class="timeline">
                        @foreach (var acceso in Model.AccesosRecientes.Take(5))
                        {
                            <div class="timeline-item mb-3">
                                <div class="d-flex">
                                    <div class="timeline-marker bg-primary rounded-circle me-3" style="width: 8px; height: 8px; margin-top: 6px;"></div>
                                    <div class="flex-grow-1">
                                        <div class="small text-muted">@acceso.Fecha.ToString("dd/MM/yyyy HH:mm")</div>
                                        <div class="small">@acceso.Descripcion</div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted small">No hay actividad reciente registrada.</p>
                }
            </div>
        </div>

        <!-- Configuración de seguridad -->
        <div class="card">
            <div class="card-header">
                <i class="bi bi-shield-check me-2"></i><strong>Seguridad</strong>
            </div>
            <div class="card-body">
                <div class="small">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Email verificado:</span>
                        <span class="badge bg-success">Sí</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Autenticación 2FA:</span>
                        <span class="badge bg-secondary">No configurada</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span>Sesiones activas:</span>
                        <span class="badge bg-info">1</span>
                    </div>
                </div>
                
                <hr>
                
                <div class="d-grid">
                    <a href="/Account/Logout" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-box-arrow-right me-1"></i>Cerrar Sesión
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-dismiss alerts after 5 seconds
            const alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(alert => {
                setTimeout(() => {
                    const bootstrapAlert = new bootstrap.Alert(alert);
                    bootstrapAlert.close();
                }, 5000);
            });
        });
    </script>
}